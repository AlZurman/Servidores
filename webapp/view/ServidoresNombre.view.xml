
<mvc:View
    controllerName="academia2022.zservidores.controller.ServidoresNombre"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f">

	<Panel id="idTablaServers" backgroundDesign="Translucent">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="GridList with break point S, M, L, XL" />
			</Toolbar>
		</headerToolbar>

		<f:GridList
			id="GridList"
            items="{modeloLocalServidores>/}"
			headerText="GridList header"
    		class="sapUiResponsiveContentPadding">
			<f:customLayout>
				<grid:GridResponsiveLayout layoutChange="onLayoutChange">
					<grid:layoutS>
						<grid:GridSettings gridTemplateColumns="repeat(auto-fit, 8rem)" gridGap="0.25rem 0.25rem" />
					</grid:layoutS>
					<grid:layoutM>
						<grid:GridSettings gridTemplateColumns="repeat(auto-fit, 12rem)" gridGap="0.5rem 0.5rem" />
					</grid:layoutM>
					<grid:layoutL>
						<grid:GridSettings gridTemplateColumns="repeat(auto-fit, 16rem)" gridGap="0.75rem 0.75rem" />
					</grid:layoutL>
					<grid:layoutXL>
						<grid:GridSettings gridTemplateColumns="repeat(auto-fit, 20rem)" gridGap="1rem 1rem" />
					</grid:layoutXL>
				</grid:GridResponsiveLayout>
			</f:customLayout>

			<f:GridListItem press='onVerUsuarios' counter="{modeloLocalServidores>CantUsuarios}" type="DetailAndActive" highlight="{path: 'Estado', formatter: '.formatter.formatterEstadoGrid'}">
            
				<VBox class="sapUiSmallMargin">
                
					<layoutData>
						<FlexItemData growFactor="1" shrinkFactor="0" />
					</layoutData>
				

					<Title class="sapUiSmallMargin" text="{modeloLocalServidores>NombreServer}" wrapping="true" />
                	<Label class="sapUiSmallMargin" text="{modeloLocalServidores>TipoServer}" wrapping="true" />

                    <ProgressIndicator
			            class="sapUiSmallMarginBottom sapUiSmallMargin"
			        	percentValue="75"
			        	displayValue="0.99GB of 1GB"
			        	showValue="true"
			        	state="Success" width="90%" />

                    <Button type="{path: 'Estado', formatter: '.formatter.formatterEstadoBottonTipo'}"  class="sapUiSmallMargin" icon="{path: 'Estado', formatter: '.formatter.formatterEstadoBottonIcono'}" text="{path: 'Estado', formatter: '.formatter.formatterEstadoBotonTexto'}" press="" >
			    	</Button>

                </VBox>
                
			</f:GridListItem>
		</f:GridList>
	</Panel>
</mvc:View>