<mvc:View
	controllerName="academia2022.zservidores.controller.Usuarios"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar" >

<VBox >
    <fb:FilterBar reset="onReset" search="onSearch" showRestoreButton="true" showClearButton="true">
			<fb:filterGroupItems>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="A" label="Usuario" mandatory="true" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input/>
					</fb:control>
				</fb:FilterGroupItem>

				<fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="Tipo de usuario" labelTooltip="Tooltip Example" mandatory="true" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<ComboBox items="{/UsuariosSet}" >
                            <core:Item key="{TipoUser}" text="{TipoUser}" />
						</ComboBox>
					</fb:control>
				</fb:FilterGroupItem>

				<fb:FilterGroupItem groupName="__$INTERNAL$" name="C" label="Nivel" labelTooltip="Tooltip Example" mandatory="true" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<ComboBox selectedKey="{a}" items="{a}" >
                            <core:Item key="{a}" text="{a}" />
						</ComboBox>
					</fb:control>
				</fb:FilterGroupItem>



				<fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="A1" label="Company" labelTooltip="Tooltip GroupItem Example">
					<fb:control>
						<Input type="Text"/>
					</fb:control>
				</fb:FilterGroupItem>

				<fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="B1" label="Customer">
					<fb:control>
						<Input type="Text"/>
					</fb:control>
				</fb:FilterGroupItem>

				<fb:FilterGroupItem groupName="G2" groupTitle="Group2" name="A2" label="Supplier" labelTooltip="Tooltip GroupItem Example">
					<fb:control>
						<Input type="Text"/>
					</fb:control>
				</fb:FilterGroupItem>

				<fb:FilterGroupItem groupName="G2" groupTitle="Group2" name="B2" label="Category">
					<fb:control>
						<Input type="Text"/>
					</fb:control>
				</fb:FilterGroupItem>
			</fb:filterGroupItems>

	    </fb:FilterBar>
</VBox>


	<Table id="tablaUsuarios"
           items="{modeloLocalUsuarios>/}"
           alternateRowColors="true" class="sapUiResponsiveContentPadding, sapUiSmallMarginBottom" >

		<headerToolbar>
			<OverflowToolbar>
				<Title text="Lista de Usuarios" level="H2"/>
				<ToolbarSpacer/>
				<!-- Add the Refresh button -->
				<Button visible="false" icon="sap-icon://refresh" press="onTablePersoRefresh" >
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Button>
				<!-- Add the Personalization button -->
				<Button visible="false" icon="sap-icon://action-settings" press="onPersoButtonPressed" >
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Button>
                <Button type="Emphasized" icon="sap-icon://add-contact" text="Agregar Usuario" press="onAdd" >
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Button>
                
                




			</OverflowToolbar>
		</headerToolbar>
		<columns>
            <Column width="25em"/>
            <Column width="3em"/>
			<Column id="NombreUser" width="13em"> <Text text="Usuario" /> </Column>
			<Column id="Nivel" width="8em"> <Text text="Nivel" /> </Column>
			<Column id="TipoUser" width="50em"> <Text text="Tipo" /> </Column>
            <Column width="5em"/>
            <Column width="5em"/>
            <Column width="25em"/>
            
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>

                    <Text text="" />
                    <core:Icon color="{path: 'modeloLocalUsuarios>TipoUser', formatter: '.formatter.formatterUsuarioColor'}" src="{path: 'modeloLocalUsuarios>TipoUser', formatter: '.formatter.formatterUsuarioIcono'}" />
                    <ObjectIdentifier title="{modeloLocalUsuarios>NombreUser}"/>
                    <Text text="{modeloLocalUsuarios>Nivel}"/>
                    <Text text="{modeloLocalUsuarios>TipoUser}"/>
                    <Button text="Edit" press="EditarUsuarioFragment"/>
                    <Button type="Reject" icon="sap-icon://delete" press="onDelete"/>

				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>